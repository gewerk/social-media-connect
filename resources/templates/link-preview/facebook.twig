<div class="smc-compose-share__facebook-link-preview">
  {% if metadata.images %}
    {% set image = metadata.images[0] %}
    <div class="smc-compose-share__facebook-link-preview-image">
      <img src="{{ image.url }}" class="smc-compose-share__facebook-link-preview-img" />
    </div>
  {% endif %}

  <div class="smc-compose-share__facebook-link-preview-content">
    <p class="smc-compose-share__facebook-link-preview-domain">{{ domain }}</p>
    <p class="smc-compose-share__facebook-link-preview-title">{{ metadata.title }}</p>
  </div>
</div>
